post_install() {
	echo "To use tdm, you have to add the following line:"
	echo -e "\t\033[32msource /usr/bin/tdm\033[0m"
	echo "to your ~/.bash_profile file,"
	echo "and edit your xinitrc file, add a line:"
	echo -e "\t\033[32mexec tdm --xstart\033[0m"
	echo "Thank you for installing tdm."
}

post_upgrade() {
	post_install
}


